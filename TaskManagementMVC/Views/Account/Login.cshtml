@{
	ViewData["Title"] = "Login";
}
@if (TempData["Message"] != null)
{
	<script>
		window.onload = function () {
			alert("@TempData["Message"]");
		};
	</script>
}


<style>
	body {
		background-color: #636386;
	}

	.register-card {
		background-color: white;
		height: 520px;
		width: 400px;
		border-radius: 0 20px 20px 0;
		display: flex;
		flex-direction: column;
		justify-content: center;
		
	}

	.img-style {
		height: 520px;
		width: 400px;
		border-radius: 20px 0 0 20px;
		}


	.btn {
		background-color: #4A4A4A;
		border-style: none;
		padding: 6px 20px;
		font-size: 20px;
	}

	.btn:hover {
			background-color: #6B6B6B;
	}

	
</style>
<body>

	<div class="d-flex justify-content-center align-items-center vh-100">
		<img class="img-style" src="@Url.Content("~/Images/login.jpg")" alt="Example Image" />
		<div class="p-5 register-card">
			@using (Html.BeginForm("Index", "Account", FormMethod.Post))
			{
				<h1 class="text-center mb-4">Login</h1>
				<div>
					<div class="form-group">
						@Html.Label("Username")
						@Html.TextBox("txt", "", new { @class = "form-control", placeholder = "Enter Username", style = "width: 300px;" })
					</div>
					<div class="form-group mt-3">
						@Html.Label("Password")
						@Html.Password("Password", "", new { @class = "form-control", placeholder = "Enter Password" })
					</div>
							

					<center><button class="btn btn-primary mt-4">Submit</button></center>
				</div>
			}
		</div>
	</div>

</body>